<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fhswf.ma.ausarbeitung.kneissig.guenther.minesweeper">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MinesweeperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Minesweeper">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- android:theme="@style/CustomTheme" -->
        <activity
            android:name=".activities.SettingsActivity"
            android:theme="@style/Theme.Minesweeper.SlidrActivityTheme" />
        <activity
            android:name=".activities.GameHistoryActivity"
            android:theme="@style/Theme.Minesweeper.SlidrActivityTheme" />
        <activity
            android:name=".activities.GameInstructionActivity" />
        <activity
            android:name=".activities.GameActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden">
            </activity>
    </application>

</manifest>


